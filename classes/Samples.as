package classes {		import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.events.Event;	import DynamicSlideShow;	import classes.Sample;			public class Samples extends Sprite {				private var _samples:XMLList;		public var samplesArray:Array;		public var _totalSamples:int;						public function Samples(s:XMLList) {			// constructor code			this._samples = s;			// stage accessible, call init function			if (stage) 			init();             else addEventListener(Event.ADDED_TO_STAGE, init); 		}				private function init(event:Event = null):void{			if (event) 			removeEventListener(Event.ADDED_TO_STAGE, init); // called via event, remove it			var s:XML;						var sWidth:Number = 70;			var sPos_X:Number = 0;			var sPos_Y:Number = 0;			samplesArray=new Array();			this._totalSamples = this._samples.length();												for each(s in this._samples)			{			    var sample = new Sample(s,sPos_X,sPos_Y,sWidth);				this.view.addChildAt(sample,s.childIndex());				samplesArray.push(sample);								sPos_X=sPos_X+sWidth+15;							}											}					}	}